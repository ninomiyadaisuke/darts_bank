<div class="shop-index-wrapper">
  <div class="container">
    <% @shops.each do |shop| %>
       <div class="row">
         <div class="col-md-6 col-md-offset-3">
           <div class="topic-index-single">
             <p class="topic-text">
               <%= link_to user_path(id: shop.user_id) do %>
                 <%= image_tag shop.image.url %>
               <% end %>
             </p>                
             <h4 class='text'>ショップ名</h4>
             <p class="topic-text">
               <%= shop.shop_name %>
             </p>
             <h4 class='text'>郵便番号</h4>
             <p class="topic-text">
              <%= shop.postal %>
             </p>
             <h4 class='text'>住所</h4>
             <p class="topic-text">
              <%= shop.prefecture_name %>
             </p>
             <p class="topic-text">
              <%= shop.address %>
             </p>             
           </div>
         </div>  
       </div> 
    <% end %>
    <div class="col-md-4 col-md-offset-3">
      <div class='pagination'>
        <%= paginate @shops %>
      </div>      
    </div>     
  </div> 
</div>
