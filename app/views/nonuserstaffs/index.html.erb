<div class="non-staffs-index-wrapper">
  <div class="container">
    <% @staffs.each do |staff| %>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="topic-index-single">
            <p class="topic-text">
              <%= image_tag staff.image.url %>
            </p> 
            <h4 class='text'>名前</h4>
            <p class="topic-text">
              <%= staff.staff_name %>
            </p>
            <h4 class='text'>ニックネーム</h4>
            <p class="topic-text">
              <%= staff.nickname %>
            </p>
            <h4 class='text'>レーティング</h4>
            <p class="topic-text">
              <%= staff.rating %>
            </p>
            <h4 class='text'>自己紹介</h4>
            <p class="topic-text">
              <%= staff.introduction %>
            </p> 
          </div>    
        </div> 
      </div>   
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      <%= paginate @staffs %>
    </div> 
  </div>  
</div>  