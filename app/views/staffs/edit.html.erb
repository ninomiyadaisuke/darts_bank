<div class="staffs-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center ">編集</h1>
        <%= form_for @staff do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image %>
          </div> 
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :staff_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :rating %>
            <%= f.text_field :rating, class: 'form-control' %>           
          </div>          
          <div class="form-group">
            <%= f.label :自己紹介 %>
            <%= f.text_area :introduction, class: 'form-control' %>
          </div>
          <%= f.submit "登録", class: 'btn btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>