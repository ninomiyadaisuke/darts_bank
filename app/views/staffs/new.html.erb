<div class="staffs-new-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-offset-4 col-md-4 users-new-container">
        <h1 class="text-center ">スタッフ新規登録</h1>
        <%= form_for @staff do |f| %>
          <div class="form-group">
            <%= f.label :image %>
            <%= f.file_field :image%>
          </div>
          <div class="form-group">
            <%= f.label :name %>
            <%= f.text_field :staff_name, placeholder: '名前', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :nickname %>
            <%= f.text_field :nickname, placeholder: 'ニックネーム', class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :rating %>
            <%= f.text_field :rating, placeholder: '例　フェニックスA14', class: 'form-control' %>           
          </div>          
          <div class="form-group">
            <%= f.label :Selfintroduction %>
            <%= f.text_area :introduction, placeholder: '自己紹介', class: 'form-control' %>
          </div>
          <%= f.submit "登録", class: 'btn btn-block btn-black' %>
        <% end %>
      </div>
    </div>
  </div>
</div>