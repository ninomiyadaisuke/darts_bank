<div class="staffs-index-wrapper">
  <div class="container">
    <% @staffs.each do |staff| %>
      <div class="row">
        <div class="col-md-4 col-md-offset-4">
          <div class="topic-index-single">
            <p class="topic-text">
              <%= image_tag staff.image.url %>
            </p> 
            <h4 class='text'>名前</h4>
            <p class="topic-text">
              <%= staff.staff_name %>
            </p>
            <h4 class='text'>ニックネーム</h4>
            <p class="topic-text">
              <%= staff.nickname %>
            </p>
            <h4 class='text'>レーティング</h4>
            <p class="topic-text">
              <%= staff.rating %>
            </p>
            <h4 class='text'>自己紹介</h4>
            <p class="topic-text">
              <%= staff.introduction %>
            </p> 
            <p class='text'>
              <% if user_check %>
                <%= link_to "編集", edit_staff_path(staff.id), class: "btn-flat-border"%>
                <%= link_to "削除", staff_path(staff.id), method: :delete, class: "btn-flat-border" %>
              <% end %> 
            </p>  
          </div>  
        </div>  
      </div>  
    <% end %>
    <div class="col-md-4 col-md-offset-4">
      <%= paginate @staffs %>
    </div> 
    <div class= "staff-btn">
      <div class="col-md-2 col-md-offset-5">
        <% if user_check %>
          <%= link_to '新規登録', new_staff_path,class: 'btn btn-block btn-black' %>
        <% end %>
      </div>       
    </div>
  </div>  
</div> 

     
