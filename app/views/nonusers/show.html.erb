<div class="user-hero-wrapper text-center">
  <div class="container top-hero-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-3">
        <%= link_to 'ショップ情報',nonusershops_nonuser_my_shop_path(id: @user.id),class: 'btn btn-block btn-black' %>
      </div>
      <div class="col-md-3">
        <%= link_to 'スタッフ紹介',nonuserstaffs_path(id: @user.id),class: 'btn btn-block btn-black' %>
      </div>
      <div class="topic-index-wrapper">
        <div class="container">
          <% @topics.each do |topic| %>
            <div class="row">
              <div class="col-md-4 col-md-offset-4">
                <div class="topic-index-single">
                  <p class="topic-text">
                    <%= image_tag topic.image.url %>
                    <%= topic.description %>
                  </p> 
                </div> 
              </div>  
            </div>  
          <% end %>
          <%= paginate @topics %>
        </div>  
      </div>
      </div>
    </div>
  </div>
</div>