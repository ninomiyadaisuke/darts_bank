<div class="non-user-shops-index-wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-4 col-md-offset-4">
        <div class="topic-index-single">
          <p class="topic-text">
            <%= image_tag @shop.image.url %>
          </p>
          <h4 class='text'>ショップ名</h4>
          <p class="topic-text">
            <%= @shop.shop_name %>
          </p>
          <h4 class='text'>郵便番号</h4>
          <p class="topic-text">
            <%= @shop.postal %>
          </p>
          <h4 class='text'>住所</h4>
          <p class="topic-text">
            <%= @shop.prefecture_name %>
          </p>
          <p class="topic-text">
            <%= @shop.address %>
          </p> 
        </div> 
      </div>  
    </div> 
  </div>
</div>