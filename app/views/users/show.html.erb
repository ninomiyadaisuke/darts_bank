<div class="user-hero-wrapper text-center">
  <div class="container top-hero-container">
    <div class="row">
      <div class="col-md-offset-3 col-md-3">
        <%= link_to 'ショップ情報',my_shop_shops_path(id: @user.id),class: 'btn btn-block btn-black' %>
      </div>
      <div class="col-md-3">
        <%= link_to 'スタッフ紹介',staffs_path(id: @user.id),class: 'btn btn-block btn-black' %>
      </div>
      <div class="topic-index-wrapper">
        <div class="container">
          <% @topics.each do |topic| %>
            <div class="row">
              <div class="col-md-4 col-md-offset-4">
                <div class="topic-index-single">
                  <p class="topic-text">
                    <%= image_tag topic.image.url %>
                    <%= topic.description %>
                  </p> 
                  <p>
                    <% if user_check %>
                      <%= link_to '編集', edit_topic_path(topic.id), class: "btn-flat-border" %>
                      <%= link_to '削除', topic_path(topic.id), method: :delete, class: "btn-flat-border"  %>
                    <% end %>
                  </p>                  
                </div> 
              </div>  
            </div>  
          <% end %>
           <%= paginate @topics %>
        </div>  
      </div>
      </div>
    </div>
  </div>
</div>





